{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "15mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "env": {
        "ERNIE_API_KEY": "@ernie_api_key",
        "ERNIE_SECRET_KEY": "@ernie_secret_key",
        "PYTHONUNBUFFERED": "1"
    }
}
